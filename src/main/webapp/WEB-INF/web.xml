<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>Registration</servlet-name>
    <jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Main</servlet-name>
    <jsp-file>/WEB-INF/jsp/main.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Reservation</servlet-name>
    <jsp-file>/WEB-INF/jsp/reservation.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Reservation</servlet-name>
    <url-pattern>/reservation</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReservationConfirm</servlet-name>
    <jsp-file>/WEB-INF/jsp/reservationConfirm.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReservationConfirm</servlet-name>
    <url-pattern>/reservationConfirm</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserCabinet</servlet-name>
    <jsp-file>/WEB-INF/jsp/userCabinet.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserCabinet</servlet-name>
    <url-pattern>/userCabinet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditUserData</servlet-name>
    <jsp-file>/WEB-INF/jsp/editUserData.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditUserData</servlet-name>
    <url-pattern>/editUserData</url-pattern>
  </servlet-mapping>

</web-app>